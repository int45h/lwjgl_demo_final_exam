<settings>
  <profiles>
    <profile>
      <id>travis</id>
      <properties>
        <gpg.executable>gpg</gpg.executable>
        <gpg.keyname>${env.GPG_KEYNAME}</gpg.keyname>
        <gpg.passphrase>${env.GPG_PASSPHRASE}</gpg.passphrase>
        <gpg.defaultKeyring>false</gpg.defaultKeyring>
        <gpg.publicKeyring>${basedir}/pubring.asc</gpg.publicKeyring>
        <gpg.secretKeyring>${basedir}/secring.asc</gpg.secretKeyring>
      </properties>
    </profile>
  </profiles>
  <activeProfiles>
    <activeProfile>travis</activeProfile>
  </activeProfiles>
  <servers>
    <server>
      <id>oss.sonatype.org</id>
      <username>${env.SONATYPE_USER}</username>
      <password>${env.SONATYPE_PASS}</password>
    </server>
  </servers>
</settings>
